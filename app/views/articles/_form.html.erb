<div id="article-form">
  <%= form_for(@article) do |f| %>
    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :company %><br>
      <%= f.text_field :company %>
    </div>
    <div class="field">
      <%= f.label :published_date %><br>
      <%= f.text_field :published_date, class: 'datepicker' %>
    </div>
    <div class="field">
      <%= f.label :company_link %><br>
      <%= f.text_field :company_link %>
    </div>
    <div class="field">
      <%= f.label :article_link %><br>
      <%= f.text_field :article_link %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>

<script>
  $('.datepicker').datepicker();
</script>
